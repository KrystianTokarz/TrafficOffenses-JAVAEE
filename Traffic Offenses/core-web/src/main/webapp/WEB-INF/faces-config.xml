<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>*</from-view-id>

        <!--system resources navigation-->
        <navigation-case>
            <from-outcome>toPublicHomePage</from-outcome>
            <to-view-id>/public/home.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>toPrivateHomePage</from-outcome>
            <to-view-id>/private/home.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>toAdministratorHomePage</from-outcome>
            <to-view-id>/admin/home.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>toWelcomePage</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>

        <!--public resources navigation-->
        <navigation-case>
            <from-outcome>toEventsPage</from-outcome>
            <to-view-id>/public/events.xhtml</to-view-id>
        </navigation-case>

        <!--private resources navigation-->

        <navigation-case>
            <from-outcome>toMandatePage</from-outcome>
            <to-view-id>/private/mandate.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>toDriverFinderPage</from-outcome>
            <to-view-id>/private/driver-finder.xhtml</to-view-id>
        </navigation-case>


        <!--administrator resources navigation-->
        <navigation-case>
            <from-outcome>toAddNewUserPage</from-outcome>
            <to-view-id>/admin/add-user.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>